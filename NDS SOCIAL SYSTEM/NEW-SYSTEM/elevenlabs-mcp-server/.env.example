# ElevenLabs MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# --- Core MCP Configuration ---
MCP_SHARED_SECRET="generate-a-random-secret-here"

# --- Supabase Credentials ---
# Get from: https://supabase.com/dashboard → Project → Settings → API
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_SERVICE_KEY="your-service-role-key"

# --- External Service Credentials ---
OPENAI_API_KEY="sk-your-openai-key"
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
TWILIO_ACCOUNT_SID="AC-your-account-sid"
TWILIO_AUTH_TOKEN="your-auth-token"
TWILIO_WHATSAPP_NUMBER="+1234567890"

# --- Observability ---
ENABLE_WORKFLOW_LOG="false"
VERCEL_BYPASS_TOKEN="optional-bypass-token"
SMOKE_PROMPT="Hero shot of galvanized steel beams stacked in a warehouse"